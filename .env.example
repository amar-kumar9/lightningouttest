# Salesforce Lightning Out Application Configuration
# Copy this file to .env and fill in your values

# Required: Salesforce Connected App credentials
SF_CLIENT_ID=your_salesforce_client_id_here
SF_CLIENT_SECRET=your_salesforce_client_secret_here

# Required: Your application host URL
REPLIT_HOST=http://localhost:5000

# Required: Session secret for secure session management
SESSION_SECRET=your_random_session_secret_here

# Optional: Salesforce login URL (defaults to https://login.salesforce.com)
SF_LOGIN_URL=https://login.salesforce.com

# Optional: Port (defaults to 5000)
PORT=5000